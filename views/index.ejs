<!DOCTYPE html>
<html lang="es">

<head>
  <meta name="description" content="PixelRushGames - Juegos Full Español APK y PC.">
  <title>PixelRushGames - Juegos PC y Android Full Español</title>

  <%- include('partials/head') %>

</head>

<body>
  <header>
    <%- include('partials/navbar') %>
  </header>

  <main>

    <div class="grid-container">

      <div class="page-title">
        <h2>Subidos Recientemente</h2>
      </div>

      <div class="br-tdtd"></div>

      <div class="games-grid">

        <% if (games.length> 0) { %>

          <% games.forEach(game=> { %>
            <%- include('partials/gameCard', { game: game }) %>
              <% }) %>

                <% } else { %>
                  <div class="no-results">
                    <% if (searchQuery) { %>
                      No se encontraron resultados para "<%= searchQuery %>".
                    <% } else { %>
                      No hay juegos disponibles.
                    <% } %>
                  </div>
                  <% } %>

                  
      </div>

      <div class="br-tdtd mb-0"></div>

      <%- include('partials/pagination') %>

    </div>

  </main>

  <%- include('partials/footer') %>
</body>

</html>