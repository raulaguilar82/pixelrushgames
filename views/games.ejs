<!DOCTYPE html>
<html lang="es">

<head>
    <title>Juegos | PixelRushGames</title>
    <%- include('partials/head') %>
</head>

<body>
    <header>
        <%- include('partials/navbar') %>
    </header>

    <main>
        <div class="grid-container">

            <div class="page-title">
                <h2>Juegos <%= currentPlatform ? `para ${currentPlatform}` : '' %></h2>
            </div>

            <div class="games-grid">

                <% if (games.length> 0) { %>
                    <% games.forEach(game=> { %>
                        <%- include('partials/gameCard', { game }) %>
                            <% }) %>
                                <% } else { %>
                                    <p>No hay juegos disponibles.</p>
                                    <% } %>

            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>

</html>